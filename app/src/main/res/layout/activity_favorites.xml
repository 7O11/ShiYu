<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <!--设置导航栏：包括返回，“站内信”text，清空信箱-->
    <LinearLayout
        android:id = "@+id/f_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/red">
        <!-- 返回 -->
        <ImageView
            android:id="@+id/back_from_f"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src = "@mipmap/left_arrow"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5dp"/>
        <!-- 文字 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="我的收藏"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#fff"/>
        <!-- 垃圾箱 -->
        <ImageView
            android:id="@+id/f_garbage"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src = "@mipmap/trash"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>
    <ListView
        android:id = "@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/f_title">
    </ListView>
    <!-- icon -->
    <com.michaldrabik.tapbarmenulib.TapBarMenu
        android:id="@+id/tapBarMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        app:tbm_buttonPosition = "right">

        <ImageView
            android:id="@+id/item_mg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/mangguotv_icon"
            />


        <ImageView
            android:id="@+id/item_tx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/tengxun_icon"
            />


        <ImageView
            android:id="@+id/item_aqy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/aiqiyi_icon"
            />

        <ImageView
            android:id="@+id/item_bili"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/bilibili_icon"
            />

        <ImageView
            android:id="@+id/item_yk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/youku_icon"
            />
        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent"
            />
    </com.michaldrabik.tapbarmenulib.TapBarMenu>
</RelativeLayout>
