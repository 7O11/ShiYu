<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_subject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">
    <!--设置导航栏：包括返回，“站内信”text，清空信箱-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#000">
        <ImageView
            android:id="@+id/back_from_mail"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src = "@mipmap/mail_back"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="站内信"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#fff"/>
        <ImageView
            android:id="@+id/mail_garbage"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src = "@mipmap/garbage"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/add_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送站内信"/>
   <ListView
        android:id="@+id/mail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>